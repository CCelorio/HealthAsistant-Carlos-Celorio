<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado normal del botón (sin interacción) -->
    <item android:state_enabled="true">
        <shape
            android:shape="oval">
            <solid android:color="#4CAF50" />  <!-- Color de fondo del botón (Ejemplo: Verde) -->
            <stroke android:color="#000000" android:width="2dp" />  <!-- Borde negro de 2dp -->
        </shape>
    </item>

    <!-- Estado de presionado del botón (al pasar por encima) -->
    <item android:state_pressed="true">
        <shape
            android:shape="oval">
            <solid android:color="#388E3C" />  <!-- Color de fondo al presionar (Ejemplo: Verde más oscuro) -->
            <stroke android:color="#000000" android:width="2dp" />  <!-- Borde negro de 2dp -->
        </shape>
    </item>
</selector>
