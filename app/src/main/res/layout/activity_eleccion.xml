<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9A9090"
    android:backgroundTint="#D8F1BC"
    tools:context=".Eleccion.EleccionActivity"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/nombreUsuarioTextView"
        android:layout_width="193dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:fontFamily="casual"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.344"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="66dp"
        android:layout_height="54dp"
        android:layout_marginTop="1dp"
        android:src="@drawable/_326055"
        app:layout_constraintEnd_toStartOf="@+id/nombreUsuarioTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSeguimientoFisico"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/boton_personalizado1"
        android:fontFamily="casual"
        android:padding="16dp"
        android:radius="8dp"
        android:text="Seguimiento Físico"
        android:textAllCaps="true"
        android:textSize="28sp"
        android:textStyle="italic"
        android:typeface="monospace"
        app:layout_constraintBottom_toTopOf="@+id/btnSaludMental"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreUsuarioTextView"
        app:layout_constraintVertical_bias="0.53" />

    <Button
        android:id="@+id/btnSaludMental"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/boton_personalizado2"
        android:fontFamily="casual"
        android:padding="16dp"
        android:radius="8dp"
        android:text="Salud Mental"
        android:textSize="30sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/btnNotificaciones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreUsuarioTextView"
        app:layout_constraintVertical_bias="0.84000003" />

    <Button
        android:id="@+id/btnNotificaciones"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/boton_personalizado3"
        android:fontFamily="casual"
        android:padding="16dp"
        android:radius="8dp"
        android:text="Notificaciones"
        android:textSize="28sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreUsuarioTextView"
        app:layout_constraintVertical_bias="0.912" />

    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="129dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:backgroundTint="#E82020"
        android:onClick="cerrarSesion"
        android:padding="16dp"
        android:radius="8dp"
        android:text="Cerrar Sesión"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSeguimientoFisico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nombreUsuarioTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>